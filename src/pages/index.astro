---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: "Autonomous Survey Drone",
    description:
      "A custom-built drone for aerial mapping and 3D reconstruction using photogrammetry.",
    tags: ["Drone", "Python", "OpenCV", "PX4"],
    link: "#",
  },
  {
    title: "Smart Home Hub",
    description:
      "IoT gateway that connects various localized protocols (Zigbee, Z-Wave) to a central dashboard.",
    tags: ["IoT", "Raspberry Pi", "Node.js", "MQTT"],
    link: "#",
  },
  {
    title: "Quadruped Robot Micro",
    description:
      "Open source quadruped robot based on ESP32, capable of dynamic gait generation.",
    tags: ["Robot", "C++", "ESP32", "3D Printing"],
    link: "#",
  },
  {
    title: "Portfolio V1",
    description:
      "The previous iteration of my personal website built with vanilla HTML/CSS.",
    tags: ["Web", "HTML", "CSS", "Javascript"],
    link: "#",
  },
];

const writings = [
  {
    title: "Building Resilient IoT Networks",
    date: "Jan 12, 2026",
    link: "#",
  },
  {
    title: "The Future of Consumer Rovers",
    date: "Dec 05, 2025",
    link: "#",
  },
  {
    title: "Migrating to Astro for Performance",
    date: "Nov 20, 2025",
    link: "#",
  },
];
---

<Layout title="Bondan Eka Nugraha">
  <!-- Hero Section -->
  <section class="min-h-[60vh] flex flex-col justify-center items-start pt-20">
    <div
      class="inline-block px-3 py-1 mb-4 text-xs font-medium tracking-wide text-blue-400 uppercase bg-blue-500/10 rounded-full border border-blue-500/20"
    >
      Available for hire
    </div>
    <h1
      class="text-5xl sm:text-7xl font-bold tracking-tight mb-6 bg-clip-text text-transparent bg-gradient-to-b from-white to-white/60"
    >
      Bondan Eka Nugraha
    </h1>
    <p class="text-xl text-gray-400 max-w-2xl leading-relaxed mb-8">
      Building things that move, fly, and connect the world. Enthusiast in <span
        class="text-white">Web, IoT, Robotics, & Drones</span
      >.
    </p>

    <div class="flex gap-4">
      <a
        href="#projects"
        class="px-6 py-2.5 bg-white text-black font-medium rounded-full hover:bg-gray-200 transition-colors"
      >
        View Work
      </a>
      <a
        href="https://github.com"
        target="_blank"
        class="px-6 py-2.5 bg-white/10 text-white font-medium rounded-full hover:bg-white/20 transition-colors border border-white/10"
      >
        GitHub
      </a>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-20 border-t border-white/[0.1]">
    <h2 class="text-2xl font-bold mb-12 flex items-center gap-2">
      <span class="w-2 h-2 rounded-full bg-blue-500"></span>
      Selected Projects
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {projects.map((project) => <ProjectCard {...project} />)}
    </div>
  </section>

  <!-- Writings Section -->
  <section id="writings" class="py-20 border-t border-white/[0.1]">
    <h2 class="text-2xl font-bold mb-12 flex items-center gap-2">
      <span class="w-2 h-2 rounded-full bg-purple-500"></span>
      Recent Writings
    </h2>

    <div class="space-y-6">
      {
        writings.map((post) => (
          <a href={post.link} class="block group">
            <article class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between py-4 border-b border-white/[0.05] group-hover:border-white/[0.2] transition-colors">
              <h3 class="text-lg font-medium text-gray-200 group-hover:text-blue-400 transition-colors">
                {post.title}
              </h3>
              <span class="text-sm text-gray-500 font-mono mt-2 sm:mt-0">
                {post.date}
              </span>
            </article>
          </a>
        ))
      }
    </div>

    <div class="mt-8">
      <a
        href="#"
        class="inline-flex items-center text-sm text-gray-400 hover:text-white transition-colors"
      >
        Read all posts <span class="ml-2">&rarr;</span>
      </a>
    </div>
  </section>
</Layout>
